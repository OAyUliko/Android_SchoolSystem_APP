<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="#342196F3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="13dp"
            android:text="按条件查找"
            android:textColor="#444141"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/admin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="52dp"
            android:text="姓名："
            android:textColor="#444141"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/admin_name"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/admin_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="52dp"
            android:text="学号："
            android:textColor="#444141"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/admin_no"
            android:ems="9"
            android:inputType="number"
            android:textSize="17sp" />

        <Button
            android:id="@+id/B1"
            style="@android:style/Widget.DeviceDefault.Button.Toggle"
            android:layout_width="76dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="178dp"
            android:text="查找"
            android:textColor="#2196F3"
            android:textSize="13dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@+id/rl"
        android:layout_marginTop="0dp"
        android:background="#142196F3"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="268dp">

            <TextView
                android:id="@+id/T1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="27dp"
                android:text="姓名："
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/E1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="27dp"
                android:layout_toEndOf="@+id/T1"
                android:background="@null"
                android:text="" />

            <TextView
                android:id="@+id/T2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="225dp"
                android:layout_marginTop="27dp"
                android:text="学号："
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/E2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="27dp"
                android:layout_toEndOf="@+id/T2"
                android:text=""
                android:textSize="17sp" />

            <TextView
                android:id="@+id/T3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="65dp"
                android:text="性别："
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/E3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="65dp"
                android:layout_toEndOf="@+id/T3"
                android:background="@null"
                android:text="" />

            <TextView
                android:id="@+id/T4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="225dp"
                android:layout_marginTop="65dp"
                android:text="年龄："
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/E4"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="65dp"
                android:layout_toEndOf="@+id/T4"
                android:background="@null"
                android:inputType="number"
                android:text="" />

            <TextView
                android:id="@+id/T5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="103dp"
                android:text="学院："
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/T6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="225dp"
                android:layout_marginTop="103dp"
                android:text="班级："
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/E6"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="103dp"
                android:layout_toEndOf="@+id/T6"
                android:background="@null"
                android:text="" />

            <TextView
                android:id="@+id/T7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="141dp"
                android:text="身份证号："
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/E7"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="141dp"
                android:layout_toEndOf="@+id/T7"
                android:background="@null"
                android:text="" />

            <TextView
                android:id="@+id/T8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="179dp"
                android:text="本学期是否参加了评教："
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/E8"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="179dp"
                android:layout_toEndOf="@+id/T8"
                android:text=""
                android:textSize="17sp" />

            <TextView
                android:id="@+id/T9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="217dp"
                android:text="登录密码："
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/E9"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="217dp"
                android:layout_toEndOf="@+id/T9"
                android:background="@null"
                android:text="" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="86dp"
                android:layout_marginTop="100dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@android:style/Widget.DeviceDefault.Button.Toggle"
                android:id="@+id/BAdd"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="22dp"
                android:text="增加新的学生信息" />

            <Button
                style="@android:style/Widget.DeviceDefault.Button.Toggle"
                android:id="@+id/BDelete"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="48dp"
                android:layout_marginTop="22dp"
                android:layout_toEndOf="@+id/BAdd"
                android:text="删除此学生信息" />

            <Button
                android:id="@+id/BUpdate"
                style="@android:style/Widget.DeviceDefault.Button.Toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BAdd"
                android:layout_alignParentStart="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="7dp"
                android:text="修改此学生信息" />

            <Button
                android:id="@+id/BScore"
                style="@android:style/Widget.DeviceDefault.Button.Toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BDelete"
                android:layout_marginStart="14dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/BUpdate"
                android:text="查看学生成绩" />

            <Button
                android:id="@+id/BClean"
                style="@android:style/Widget.DeviceDefault.Button.Toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BDelete"
                android:layout_marginStart="14dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/BScore"
                android:text="清空内容" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>