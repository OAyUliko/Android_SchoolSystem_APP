<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sl"
        android:nestedScrollingEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="459dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="459dp"
            android:orientation="vertical">

            <!--注意这里的GridLayout的长要多一点，才能出现滚动效果，而不是要和linear的长度相同-->
            <GridLayout
                android:id="@+id/grid2"
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:layout_marginTop="0dp"
                android:columnCount="8"
                android:rowCount="11"></GridLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_below="@+id/sl"
        android:layout_marginTop="1dp"
        android:background="#142196F3">

        <Button
            android:id="@+id/BAdd4"
            style="@android:style/Widget.DeviceDefault.Button.Toggle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="22dp"
            android:text="增加新的课程信息" />

        <Button
            android:id="@+id/BDelete4"
            style="@android:style/Widget.DeviceDefault.Button.Toggle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/BAdd4"
            android:text="删除此课程" />

        <Button
            android:id="@+id/BUpdate4"
            style="@android:style/Widget.DeviceDefault.Button.Toggle"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BAdd4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="7dp"
            android:text="修改此课程信息" />

    </RelativeLayout>


</RelativeLayout>